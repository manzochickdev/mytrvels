<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="8dp">

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="120dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/place_iv"
            android:layout_width="150dp"
            android:layout_height="140dp" />

        <RelativeLayout
            android:padding="4dp"
            android:background="@android:color/white"
            android:layout_gravity="bottom"
            android:id="@+id/view_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:id="@+id/place_name_tv"
                android:text="aaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/place_name_tv"
                android:id="@+id/place_address_tv"
                android:text="sss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:id="@+id/details_tv"
                android:gravity="center"
                android:layout_below="@id/place_address_tv"
                android:padding="4dp"
                android:background="@drawable/curved_background"
                android:text="Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:id="@+id/plan_tv"
                android:gravity="center"
                android:layout_below="@id/details_tv"
                android:padding="4dp"
                android:background="@drawable/curved_background"
                android:text="Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>